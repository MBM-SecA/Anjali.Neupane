@model Department
@{
    ViewData ["TitlePhrase"]= "Update Employee";
}
<h3>Update </h3>
<hr>
<form asp-controller="Department" asp-action="Edit" method="POST">
  <input type="hidden" asp-for="Id"/>
  <div class="form-group">
    <label asp-for="Id"></label>
    <span class ="text-danger" asp-validation-for="Id"></span>
    <input type="text" class="form-control" asp-for="Id" placeholder="Enter Id:">
  </div>
  <div class="form-group">
    <label asp-for="Name"></label>
    <span class = "text-danger" asp-validation-for="Name"></span>
    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name:">
  </div>
  <div class="form-group">
    <label asp-for="Code"></label>
    <textarea type="text" class="form-control" asp-for="Code" placeholder="Enter code:"></textarea>
  </div>
  <div class="form-group">
    <label asp-for="Description"></label>
     <textarea type="text" class="form-control" asp-for="Description"placeholder="Description Here:"> </textarea>
  </div>
  <div class="form-group">
    <label asp-for="StartDate"></label>
    <input type="date" class="form-control" asp-for="StartDate" placeholder="Enter StartDate:">
  </div>
  <button type="submit" class="btn btn-primary">Update Department</button>
</form>