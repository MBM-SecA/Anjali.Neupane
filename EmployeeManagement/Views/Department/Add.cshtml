@model Department
@{
    ViewData ["TitlePhrase"]= "Add ";
}
<h3>Add </h3>
<hr>
<form asp-controller="Department" asp-action="Add" method="POST">
   <div class="form-group">
    <label asp-for="Id"></label>
    <span asp-validation-for="Id"></span>
    <input type="text" class="form-control" asp-for="Id" placeholder="Enter Id:">
   </div>
   <div class="form-group">
    <label asp-for="Name"></label>
    <span asp-validation-for="Name"></span>
    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name:">
   </div>
   <div class="form-group">
    <label asp-for="Code"></label>
    <textarea type="text" class="form-control" asp-for="Code" placeholder="Enter  Code:"></textarea>
   </div>
   <div class="form-group">
     <label asp-for="Description"></label>  
      <textarea type="text" class="form-control" asp-for="Description"  placeholder="Description Here:"></textarea> 
   </div>
   <div class="form-group">
    <label asp-for="StartDate"></label>
    <input type="date" class="form-control" asp-for="StartDate" placeholder="Enter StartDate:">
   </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>